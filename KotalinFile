import com.cscorner.ca2.ui.theme.Ca2Theme

class MainActivity2 : ComponentActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        enableEdgeToEdge()
        setContent {
            Ca2Theme {
                movieBook()
            }
        }
    }
}

@Composable
fun movieBook() {
    val context = LocalContext.current
    val pricePerSeat = 200
    var inputName by remember { mutableStateOf("") }
    var seatsText by remember { mutableStateOf("") }
    var amountPaidText by remember { mutableStateOf("") }

    Scaffold(
        modifier = Modifier.fillMaxSize()
    ) { innerPadding ->
        Column(
            modifier = Modifier
                .fillMaxSize()
                .padding(innerPadding)
                .padding(24.dp),
            horizontalAlignment = Alignment.CenterHorizontally,
            verticalArrangement = Arrangement.Center
        ) {
            Text(
                text = "Pushpa - 2",
                style = MaterialTheme.typography.headlineLarge,
                fontWeight = FontWeight.Bold,
                color = MaterialTheme.colorScheme.primary
            )
            
            Spacer(modifier = Modifier.height(8.dp))
            
            Text(
                text = "Price per seat: â‚¹$pricePerSeat",
                style = MaterialTheme.typography.titleMedium
            )

            Spacer(modifier = Modifier.height(32.dp))

            OutlinedTextField(
                value = inputName,
                onValueChange = { inputName = it },
                label = { Text("Enter your name") },
                modifier = Modifier.fillMaxWidth(),
                singleLine = true
            )

            Spacer(modifier = Modifier.height(16.dp))

            OutlinedTextField(
                value = seatsText,
                onValueChange = { seatsText = it },
                label = { Text("Number of seats") },
                modifier = Modifier.fillMaxWidth(),
                keyboardOptions = KeyboardOptions(keyboardType = KeyboardType.Number),
                singleLine = true
            )

            Spacer(modifier = Modifier.height(16.dp))

            OutlinedTextField(
                value = amountPaidText,
                onValueChange = { amountPaidText = it },
                label = { Text("Enter amount paid") },
                modifier = Modifier.fillMaxWidth(),
                keyboardOptions = KeyboardOptions(keyboardType = KeyboardType.Number),
                singleLine = true
            )

            Spacer(modifier = Modifier.height(32.dp))

            Button(
                onClick = {
                    val seats = seatsText.toIntOrNull() ?: 0
                    val amountPaid = amountPaidText.toIntOrNull() ?: 0
                    val totalPrice = seats * pricePerSeat

                    if (
                        inputName.isNotBlank() &&
                        seats > 0 &&
                        amountPaid == totalPrice
                    ) {
                        val intent = Intent(Intent.ACTION_SEND).apply {
                            type = "text/plain"
                            putExtra(
                                Intent.EXTRA_TEXT,
                                "ðŸŽ¬ Movie booked successfully!"
                            )
                        }

                        context.startActivity(
                            Intent.createChooser(intent, "Share via")
                        )
                    } else {
                        Toast.makeText(
                            context,
                            "Invalid details or incorrect amount paid",
                            Toast.LENGTH_LONG
                        ).show()
                    }
                },
                modifier = Modifier
                    .fillMaxWidth()
                    .height(50.dp)
            ) {
                Text("Submit")
            }
        }
    }
}

@Preview(showBackground = true)
@Composable
fun GreetingPreview() {
    Ca2Theme {
        movieBook()
    }
}
